<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".espetada_paris">


    <TextView
        android:id="@+id/titulo"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:text="Carne Assada com Batata e Queijo"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/preparacao2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="50dp"
        android:text="\n\n\n\n\n\n\n\n\n\n\n\nPreparação:\n
        Corte as batatas e a carne em cubinhos, e coloque-as
         em um refratário; \n
        Adicione também o sal, a pimenta, a páprica, a cebola, o azeite, e misture tudo;\n
        Cubra o refratário com papel alumínio, e leve-o ao forno pré-aquecido a 200º graus por cerca de 40 a 50 minutos;\n
        Retire o papel alumínio, acrescente o queijo ralado por
        cima da carne e das batatas, salpique orégaos e volte o \nrefratário para forno por mais 15 minutos;"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/ingredientes2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/preparacao2"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="0dp"
            android:text="Ingredientes:\n
        4 batatas médias\n
        600 g de carne\n
        1 cebola picada\n
        1 colher de sopa de sal\n
        1 pitada de pimenta-do-reino\n
        1 colher de chá de páprica doce\n
        2 colheres de sopa de azeite\n
        200 g de mozzarela ralada\n
        Orégãos a gosto"
            android:textColor="@color/black" />
    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="49dp"
        android:onClick="voltar3"
        android:text="Voltar" />


</RelativeLayout>