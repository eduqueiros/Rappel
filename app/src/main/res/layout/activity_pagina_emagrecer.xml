<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".perfil">

    <ImageView
        android:id="@+id/inicio"
        android:layout_width="52dp"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="7dp"
        app:srcCompat="@drawable/imagem1" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="42dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="85dp"
        android:layout_marginBottom="10dp"
        android:onClick="receitas2"
        app:srcCompat="@drawable/_bc778d0c20c509a77c0c81c38c2abbe" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="40dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:onClick="saude"
        app:srcCompat="@drawable/planodesaude" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="51dp"
        android:layout_height="49dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="98dp"
        android:layout_marginRight="87dp"
        android:layout_marginBottom="9dp"
        android:onClick="pdietas"
        app:srcCompat="@drawable/plano" />

    <ImageView
        android:id="@+id/perfil2"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="9dp"
        android:onClick="perfil2"
        app:srcCompat="@drawable/_250689" />

    <TextClock
        android:id="@+id/textclock"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:format12Hour="dd-MMM-yyyy"
        android:format24Hour="dd-MMM-yyyy"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/planodieta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8:30 - Pequeno-almoco\n1 chávena de chá ou infusão sem açúcar\n1 café ou descafeinado sem açúcar\n1 fatia de pão de centeio com 1 fatia de queijo (light)\n11:00 - Meio da manhã\n1 maçã, laranja, pera, quivi, pêssego, nectarina ou anona\nOu pode optar por uma gelatina vegetal.\n13:00 - Almoço\n1/2 tigela de sopa (preferencialmente sem batata, com curgete ou nabo em substituição)\n1/3 do prato com legumes e horticolas em salada ou legumes (cozidos ou ao vapor)\n1/3 do prato com proteina, nomeadamente 1 posta de peixe\n1/3 do prato com hidratos de carbono (até três vezes por semana)\nNos dias em que nao incluir hidratos de carbono ao almoco, divida o prato ao meio.\nEste deve ser composto por metade de verduras e a outra metade por fontes de proteina.\n17:00 - Lanches da tarde\nFaça dois lanches\nNo primeiro, opte por uma porção de fruta.\nAo segundo, prefira um iogurte magro.\nNos dias em que não comer hidratos de carbono ao almoco inclua neste segundo lanche:\n1 chávena de chá ou infusão sem açúcar\n1 fatia de pão de centeio com 1 fatia de queijo (light)\n20:00 - Jantar\n1 tigela (2 conchas) de sopa ou creme de legumes (sem batata)\n1 posta de peixe pequena (1 lata de atum ao natural, lombos de pescada, salmão)"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginTop="55dp"
        />

    <TextView
        android:id="@+id/contactar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="70dp"
        android:background="@android:color/holo_orange_dark"
        android:onClick="contacta"
        android:text="Contacte-nos"
        android:textColor="@color/black"
        android:textSize="18dp" />
</RelativeLayout>
