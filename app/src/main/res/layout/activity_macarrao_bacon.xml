<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".espetada_paris">


    <TextView
        android:id="@+id/titulo"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:text="Macarrão com Brocolos e Bacon"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/preparacao2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="50dp"
        android:text="\n\n\n\n\n\n\n\n\n\n\nPreparação:\n
        Leve uma panela ao fogo médio, coloque o macarrão, a água e o sal, e deixe cozinhar até ele ficar al dente.\n
        Depois, escorra a água, e reserve;\n
        Leve outra panela ao fogo, adicione o azeite, e frite o bacon;\n
        Acrescente os brócolos, o sal, a pimenta, coloque água, tampe a panela, e deixe-o cozinhar (ponto al dente) até a água secar;\n
        Coloque a manteiga, misture, e desligue fogo;\n
        Transfira o macarrão para um refratário, junte o brócolis e o bacon e sirva!\n"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/ingredientes2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/preparacao2"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="0dp"
            android:text="Ingredientes:\n\n
        500 g de macarrão (tipo penne)\n
        2 colheres de café de sal\n
        1 fio de azeite\n
        300 g de bacon picado\n
        1 maço de brócolis picado\n
        50 ml de água\n
        1 pitada de pimenta\n
        1 colher de sopa de manteiga\n"
            android:textColor="@color/black" />
    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="49dp"
        android:onClick="voltar3"
        android:text="Voltar" />


</RelativeLayout>