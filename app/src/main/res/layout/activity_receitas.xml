<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".receitas">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inicio"
        android:layout_marginBottom="615dp"
        android:height="50dp"
        android:textColor="@color/black"
        android:text="PÃ¡gina de Receitas"
        android:textSize="25dp"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/receitasImagem"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/bc778d0c20c509a77c0c81c38c2abbe"
        android:translationY="110dp">
    </ImageView>

    <TextView
        android:id="@+id/receitasNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receitas para Engordar"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:translationX="90dp"
        android:translationY="120dp">


    </TextView>

    <ImageView
        android:id="@+id/receitasImagem2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:translationY="210dp"
        app:srcCompat="@drawable/bc778d0c20c509a77c0c81c38c2abbe"></ImageView>

    <TextView
        android:id="@+id/receitasNome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receitas para Manter"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:translationX="90dp"
        android:translationY="220dp">

    </TextView>

    <ImageView
        android:id="@+id/receitasImagem3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:translationY="320dp"
        app:srcCompat="@drawable/bc778d0c20c509a77c0c81c38c2abbe"></ImageView>

    <TextView
        android:id="@+id/receitasNome3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receitas para Emagrecer"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:translationX="90dp"
        android:translationY="330dp">

    </TextView>

    <ImageView
        android:id="@+id/inicio"
        android:layout_width="52dp"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="7dp"
        android:onClick="inicial"
        app:srcCompat="@drawable/imagem1" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="42dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="85dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/bc778d0c20c509a77c0c81c38c2abbe" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="40dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/planodesaude" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="51dp"
        android:layout_height="49dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="98dp"
        android:layout_marginRight="87dp"
        android:layout_marginBottom="9dp"
        app:srcCompat="@drawable/plano" />

    <ImageView
        android:id="@+id/perfil2"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="9dp"
        android:onClick="perfil2"
        app:srcCompat="@drawable/_50689" />

    <Button
        android:id="@+id/buttonengordar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:alpha="0."
        android:text="Button"
        android:onClick="engordar"
        android:translationY="100dp" />

    <Button
        android:id="@+id/buttonmanter"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:alpha="0."
        android:text="Button"
        android:onClick="manter"
        android:translationY="200dp" />
    <Button
        android:id="@+id/buttonemagrecer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:alpha="0."
        android:onClick="emagrecer"
        android:text="Button"
        android:translationY="310dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="?attr/homeAsUpIndicator"
        android:onClick="volta" />



</RelativeLayout>